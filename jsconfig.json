{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "node",
    "checkJs": true
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "paths": {
    "baseUrl": ".",
    "@pages/*": ["./pages/*"],
    "@fixtures/*": ["./fixtures/*"],
    "@files/*": ["./utils/*"],
  }
}